<Application x:Class="Iks_Oks.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Iks_Oks"
             StartupUri="Windows/StartWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15" BorderThickness="1" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelWinnerStyleX" TargetType="{x:Type Label}">
            <Setter Property="Content" Value="Player X wins !"></Setter>
            <Setter Property="Foreground" Value="BLue"></Setter>
        </Style>

        <Style x:Key="LabelWinnerStyleO" TargetType="{x:Type Label}">
            <Setter Property="Content" Value="Player X wins !"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>

    </Application.Resources>
</Application>
